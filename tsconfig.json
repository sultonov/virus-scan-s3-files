{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "lib": ["esnext"],
  "exclude": [
    "node_modules"
  ]
}
