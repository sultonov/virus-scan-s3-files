{
  "name": "shaman-global-api",
  "version": "1.0.0",
  "description": "Global api",
  "main": "server/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "nodemon --watch '**/**' --ext 'ts' --ignore 'node_modules/**' --exec 'tsc'",
    "eslint": "eslint '**/*.ts'",
    "eslint-fix": "eslint --fix '**/*.ts'",
    "dev": "sls offline --stage dev --watch",
    "test": "ava --serial --timeout=30s",
    "serve": "nodemon dist/src/server.js",
    "start": "node dist/src/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo ESLINT... && npm run eslint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:shamanapp/shaman-global-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^6.17.6",
    "@types/supertest": "^2.0.11",
    "aws-sdk": "^2.1101.0",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "ava": "^4.0.1",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "serverless-domain-manager": "^6.0.1",
    "serverless-dotenv-plugin": "^3.12.2",
    "serverless-offline": "^8.4.0",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "ts-mock-imports": "^1.3.8",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
